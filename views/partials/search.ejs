<section class="search-form">
    <div class="container">
        <div class="search-inner"><a href="#" class="remove"><img src="images/dash.png" alt="dash"></a>
            <%
            var zip_value = '';
            var secondary_style=' style="display:none;"'

            if (typeof zip_code != 'undefined') {
                zip_value = zip_code.zip_code;
                secondary_style = '';
            %>
                <h2>Used Cars Near <%=zip_code.city %>, <%=zip_code.state_name %> (<%=zip_code.zip_code %>)</h2>
            <% } else { %>
              <h2>Local Used Car Search</h2>
            <% } %>

            <form action="/" method="post" id="main-search">
                <div class="row" id="primary-search">
                    <div class="col-lg-6 col-md-6 clearfix">
                        <div class="form-group clearfix">
                            <label for="zip_code" class="control-label">Enter your zip code or city to find used cars for sale near you:</label>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 clearfix">
                        <div class="form-group clearfix">
                            <input type="text" name="zip_code" id="zip_code" class="form-control" value="<%=zip_value %>"/>
                        </div>
                    </div>
                </div>

                <div class="row" id="secondary-search"<%-secondary_style %>>
                    <div class="col-lg-6 col-md-6 clearfix">
                        <div class="form-group clearfix">
                            <div class="col-lg-8 col-md-8 col-sm-6">
                                <select class="form-control">
                                    <option>Make </option>
                                    <option>Option 1</option>
                                    <option>Option 1</option>
                                    <option>Option 1</option>
                                </select>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-6">
                                <select class="form-control">
                                    <option>Year</option>
                                    <option>Option 1</option>
                                    <option>Option 1</option>
                                    <option>Option 1</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-8 col-md-8 col-sm-6">
                                <select class="form-control">
                                    <option>Model</option>
                                    <option>Option 1</option>
                                    <option>Option 1</option>
                                    <option>Option 1</option>
                                </select>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-6">

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="sort">
                            <label class="control-label">Sort by</label>
                        </div>
                        <div class="buttons"> <a href="#">Price</a> <a href="#">Mileage</a> <a href="#">Distance</a> </div>
                    </div>
                </div>
            </form>
        </div>
        </div>
    </section>