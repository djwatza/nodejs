<section class="browse-cars" data-ng-controller="simpleSearchController as search">
<div class="container">
    <div class="search-inner col-lg-12 col-md-12 clearfix">
    <form method="get" action="#" name="search.input.simple" data-ng-submit="search.query()">
        <div class="row">
                <div class="form-group clearfix">
                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <select
                                class="form-control"
                                data-ng-options="make.label for make in search.makes"
                                data-ng-model="search.input.simple.make"
                                data-ng-change="search.setMake()"
                                >
                        </select>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <select
                                class="form-control"
                                data-ng-options="model.value for model in search.selectedModels"
                                data-ng-model="search.input.simple.model"
                                >
                        </select>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <input
                                class="form-control"
                                type="text"
                                placeholder="Zip Code"
                                data-ng-model="search.input.simple.zip_code"/>
                    </div>

                    <div class="col-lg-3 l-md-3 col-sm-3">
                        <input type="submit" class="btn btn-block" value="Show Cars" />
                    </div>
                </div>
            </div>
    </form>
</div>
</div>
</section>