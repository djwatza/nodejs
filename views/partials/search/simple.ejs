                                data-ng-init="0">
                        </select>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <select class="form-control">
                            <option>Model</option>
                            <option>Option 1</option>
                            <option>Option 1</option>
                            <option>Option 1</option>
                        </select>
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <input class="form-control" type="text" name="zip_code" placeholder="Zip Code" />
                    </div>

                    <div class="col-lg-3 l-md-3 col-sm-3">
                        <input type="submit" class="btn btn-block" value="Show Cars" />
                    </div>
                </div>
            </div>
    </form>
</div>
</div>
