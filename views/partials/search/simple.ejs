<section class="browse-cars" data-ng-controller="simpleSearchController as search">
<div class="container">
    <div class="search-inner col-lg-12 col-md-12 clearfix">
    <form method="get" action="#" name="search.input.simple">
        <div class="row">
                <div class="form-group clearfix">
                    <div class="col-lg-3 col-md-3 col-sm-3">
                        <select
                                class="form-control"
                                data-ng-options="make.value as make.label for make in search.makes track by make.value"
